<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-header">
    <a href="/menus?menu_category_id=1" class="navbar-brand">＜</a>
    <a href="/menus?menu_category_id=1" class="navbar-brand">一覧へ戻る</a>
  </div>

</nav>

<body>
  <div class="body_buying_detail">
    <div class="container">
      <div class = "raw">
        <div class = "col-xs-12">
          <% flash.each do |name, msg| %>
            <br>
            <br>
            <br>
            <div class="alert alert-<%= name %> text-center">
              <%= msg.html_safe %>
            </div>
            <% end %>
        </div>
      </div>
      <div class="col-xs-12">
        <div id="mycarousel" class="carousel slide">
          <ol class="carousel-indicators">
            <li data-taget="#mycarousel" data-slide-to="0" class="active"></li>
            <li data-taget="#mycarousel" data-slide-to="1"></li>
            <li data-taget="#mycarousel" data-slide-to="2"></li>
          </ol>

          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag "/#{@menu.id}/main_1.jpg" ,:class => "img-responsive", :onerror => "this.src='/no-image.png'"%>
            </div>
            <div class="item">
              <%= image_tag "/#{@menu.id}/main_2.jpg" ,:class => "img-responsive", :onerror => "this.src='/no-image.png'"%>
            </div>
            <div class="item">
              <%= image_tag "/#{@menu.id}/main_3.jpg" ,:class => "img-responsive", :onerror => "this.src='/no-image.png'"%>
            </div>
            <!-- <左右のコントロール＞ -->
            <a class="carousel-control left" href="#mycarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control right" href="#mycarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>

        <div class="caption">
          <h3><%= @menu.name %></h3>
          <hr>
          <h4><%= @menu.description %></h4>
          <hr>

          <%= form_tag('/carts/add', method: :post, class: "form-horizontal") do %>
          <%= hidden_field_tag :menuId, @menuId %>
          <div class="form-group">
            <div class="col-xs-12 text-right">
              <div class="col-xs-offset-4 col-xs-4">数量：</div>
              <div class="col-xs-4">
                <%= select :cart, :quantity, [1,2,3,4,5], {}, {autofocus: 'true', class: 'form-control'} %>
              </div>
            </div>
            </div>
            <div class="col-xs-12 text-right">
              <h4>（税抜）<%= @menu.price %>円</h4>
            </div>
            <div class="col-xs-12">
              <%= submit_tag "カートに追加する", :class => "btn btn-block btn-danger btn-lg"%>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="navbar-header">
        <div class="btn-group-justified">
          <div class="row">
            <div class="col-xs-6 purchase_proceed_button">
              <a href="/menus?menu_category_id=1" class="btn btn-block btn-primary btn-lg">一覧へ戻る</a>
            </div>
            <div class="col-xs-6 purchase_proceed_button">
              <a href="/carts" class="btn btn-block btn-primary btn-lg">カートへ移動する</a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </body>
