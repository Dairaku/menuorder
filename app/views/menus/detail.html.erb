<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-header">
    <a href="#" class="navbar-brand">＜</a>
    <a href="#" class="navbar-brand">一覧に戻る</a>
  </div>

</nav>

<body>
  <div class="body_buying_detail">
    <div class="container">
      <br>
      <br>
      <br>
      <br>
      <div class="col-xs-12">
        <div id="mycarousel" class="carousel slide">
          <ol class="carousel-indicators">
            <li data-taget="#mycarousel" data-slide-to="0" class="active"></li>
            <li data-taget="#mycarousel" data-slide-to="1"></li>
            <li data-taget="#mycarousel" data-slide-to="2"></li>
          </ol>

          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag "/#{@menu.id}/main.png" ,:class => "img-responsive"%>
            </div>
            <div class="item">
              <%= image_tag "/#{@menu.id}/main_2.png" ,:class => "img-responsive"%>
            </div>
            <div class="item">
              <%= image_tag "/#{@menu.id}/main_3.png" ,:class => "img-responsive"%>
            </div>
            <!-- <左右のコントロール＞ -->
            <a class="carousel-control left" href="#mycarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control right" href="#mycarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>

        <div class="caption">
          <h4><%= @menu.name %></h4>
          <hr>
          <h5><%= @menu.description %></h5>
          <hr>

          <%= form_tag('/carts/add', method: :post, class: "form-horizontal") do %>
          <%= hidden_field_tag :menuId, @menuId %>
          <div class="form-group">
            <div class="text-right">
              <div class="col-xs-offset-4 col-xs-4">数量：</div>
              <div class="col-xs-4">
                <%= select :cart, :quantity, [1,2,3,4,5], {}, {autofocus: 'true', class: 'form-control'} %>
              </div>
            </div>
          </div>
        </div>

        <div class="text-right">
          <h4>（税抜）<%= @menu.price %>円</h4>
        </div>
      </div>
    </div>
  </body>

  <nav class="navbar navbar-default navbar-fixed-bottom">
    <div class="navbar-header">
      <div class="row">
        <div class="col-xs-7 col-xs-offset-5 purchase_proceed_button">
          <%= submit_tag "注文リストに追加する", :class => "btn btn-block btn-primary"%>
        </div>
      </div>
    </div>
  </nav>
  <% end %>
